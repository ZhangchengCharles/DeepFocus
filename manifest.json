{
  "manifest_version": 3,
  "name": "DeepFocus - AI-powered Focus Assistant",
  "version": "1.0.2",
  "description": "An AI-powered focus assistant that helps you stay focused and productive by blocking distracting webpages intelligently.",
  "permissions": ["activeTab", "storage", "notifications", "tabs", "unlimitedStorage"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "DeepFocus Demo"
  },
  "options_page": "dist/options.html",
  "icons": {
    "16": "icons/brain48.png",
    "48": "icons/brain48.png",
    "128": "icons/brain48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/*.wasm", "dist/*.js", "dist/*.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
} 